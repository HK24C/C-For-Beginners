#include<stdio.h>

/*program to check whether the input integer number
is even or odd using the modulus operator (%)*/

int main()
{
  //This variable is to store the input number
  int num;
  
  printf("enter an integer");
  scanf("%d",&num);
  
  //Modulus (%) returns the remainder
  if( num%2 == 0) //this is the condition for number to be even if condition is true print if statment otherwise print else statement
    printf("%d is an even number/n",num);
  else
    printf("%d is an odd number/n", num);
    
 return 0;
} 

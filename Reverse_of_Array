#include<stdio.h>
//To print the reverse of elements of an array
int main()
{
    int i,n,a[50];

    printf("Enter the numbers of elements of array:\n");
    scanf("%d",&n);

    for(i=0;i<n;i++)
    {
        printf("\nEnter the %d element of array:",i+1);
        scanf("%d",&a[i]);
    }
    printf("\n----The elements of array----\n");

    for(i=0;i<n;i++)
    {
        printf("%d\t",a[i]);
    }

    printf("\n----The reverse of elements of array----\n");
    
    for(i=n-1;i>=0;i--)
    {
        printf("%d\t",a[i]);
    }
    printf("\n");
    return 0;
    
}
